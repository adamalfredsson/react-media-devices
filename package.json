{
  "name": "react-media-devices",
  "version": "1.0.0",
  "description": "A custom hook to enumerate user media devices, using the MediaDevices API",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Adam Alfredsson",
    "email": "adam@zodiapps.com",
    "url": "https://zodiapps.com/"
  },
  "files": [
    "/lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "lint": "eslint \"{src,example}/**/*.{ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.4",
    "@types/react": "^18.0.17",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js}": [
      "yarn lint:fix"
    ],
    "*.{tsx,ts,jsx,js,json,md}": [
      "yarn format"
    ]
  }
}
