{
  "name": "react-media-devices",
  "version": "1.2.0",
  "description": "A custom hook to enumerate user media devices, using the MediaDevices API",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/index.d.ts",
  "typings": "./lib/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Adam Alfredsson",
    "email": "adam@zodiapps.com",
    "url": "https://zodiapps.com/"
  },
  "homepage": "https://github.com/adamalfredsson/react-media-devices",
  "keywords": [
    "react",
    "media-device",
    "react-media-devices",
    "devices",
    "device id",
    "MediaDevices API"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adamalfredsson/react-media-devices.git"
  },
  "bugs": {
    "url": "https://github.com/adamalfredsson/react-media-devices/issues",
    "email": "adam@zodiapps.com"
  },
  "files": [
    "/lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "lint": "eslint \"{src,example}/**/*.{ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": "^16.8.0  || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js}": [
      "yarn lint:fix"
    ],
    "*.{tsx,ts,jsx,js,json,md}": [
      "yarn format"
    ]
  },
  "dependencies": {
    "use-deep-compare-effect": "^1.8.1"
  }
}
